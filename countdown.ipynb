    "import time\n",
    "def countdown(t):\n",
    "    while t>0:\n",
    "        x,y=divmod(t,60)\n",
    "        timer = \"{:02d}:{:02d}\".format(x,y)\n",
    "        print(timer, end=\"\\r\")\n",
    "        time.sleep(1)\n",
    "        t-=1\n",
    "    print(\"fire in the hole\")\n",
    "t= input(\"Enter the length of the countdown in seconds\")\n",
    "countdown(int(t))"
   ]
